<?xml version="1.0"?>
<launch>

	<arg name="point_cloud_topic" default="/point_cloud"/>
  <!-- Builds map from d435 camera --> 
  <node pkg="octomap_server" type="octomap_server_node" name="octomap_server">
      <rosparam file="$(find lunabot_config)/config/octomap.yml" command="load" />
      <!-- data source to integrate (PointCloud2) -->
      <remap from="cloud_in" to="$(arg point_cloud_topic)" />
  </node>
  <include file="$(find lunabot_bringup)/launch/view_tf.launch" />
  <node pkg="rosbag" type="play" name="player" output="screen" args="--clock -l --rate 2 $(find lunabot_bringup)/bags/2-5-mapping.bag" />
</launch>
